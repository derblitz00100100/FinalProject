<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_cardDetail_goback"
        android:layout_width="91dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Go Back"
        app:layout_constraintBottom_toTopOf="@+id/imageView_cardDetail_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.266" />

    <TextView
        android:id="@+id/textView_cardDetail_detail"
        android:layout_width="343dp"
        android:layout_height="202dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="100dp"
        android:text="detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_cardDetail_image"
        app:layout_constraintVertical_bias="0.095" />

    <TextView
        android:id="@+id/textView_cardDetail_name"
        android:layout_width="137dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toEndOf="@+id/imageView_cardDetail_image"
        tools:layout_editor_absoluteY="89dp" />

    <TextView
        android:id="@+id/textView_cardDetail_arena"
        android:layout_width="136dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="arena"
        app:layout_constraintBottom_toTopOf="@+id/textView_cardDetail_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/imageView_cardDetail_image"
        app:layout_constraintTop_toBottomOf="@+id/textView_cardDetail_type"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/textView_cardDetail_type"
        android:layout_width="136dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/imageView_cardDetail_image"
        app:layout_constraintTop_toBottomOf="@+id/textView_cardDetail_elixir" />

    <TextView
        android:id="@+id/textView_cardDetail_elixir"
        android:layout_width="136dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="elixir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/imageView_cardDetail_image"
        app:layout_constraintTop_toBottomOf="@+id/textView_cardDetail_name" />

    <ImageView
        android:id="@+id/imageView_cardDetail_image"
        android:layout_width="181dp"
        android:layout_height="175dp"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="89dp"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>